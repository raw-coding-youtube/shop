<div style="width: 100%; background-color: #1B0F1E;">
    <table style="margin: 0 auto;">
        <tbody>
        <tr style="height: 55px">
            <td colspan="4"
                style="font-family: 'Nunito', sans-serif; color: #fff; font-weight: bold; font-size: 18px; text-align: center; padding-top: 8px;">
                Order Summary
            </td>
        </tr>
        {% for product in Products %}
            <tr>
                <td colspan="1" style="width: 100px; height: 100px;">
                    <img src="{{ product.DefaultImage }}" style="width: 100px !important; height: 100px !important;"
                         alt="">
                </td>
                <td colspan="2" style="padding: 0 8px;">
                    <div style="font-family: 'Nunito', sans-serif; color: #fff; font-weight: bold; font-size: 18px;">{{ product.Name }}
                        - {{ product.Series }}</div>
                    {% if product.StockDescription and product.StockDescription != '' %}
                        <div style="font-family: 'Nunito', sans-serif; color: #fff; font-size: 14px;">{{ product.StockDescription }}
                            : {{ product.StockText }}</div>
                    {% endif %}
                    <div style="font-family: 'Nunito', sans-serif; color: #c0c0c0; font-size: 15px;">Qty: x{{ product.Qty }}</div>
                </td>
                <td colspan="1" style="font-family: 'Nunito', sans-serif; color: #fff; width: 100px; height: 100px; text-align: right;">
                    {{ product.Total }}
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="4" style="font-family: 'Nunito', sans-serif; color: #fff; padding: 0 8px; font-size: 16px; text-align: right;">
                Total: <strong>{{ Total }}</strong>
            </td>
        </tr>
        <tr style="height: 55px">
            <td colspan="2"
                style="font-family: 'Nunito', sans-serif; color: #fff; font-weight: bold; font-size: 24px; padding: 8px 32px 0;">
                Delivery Information
            </td>
            <td colspan="2"
                style="font-family: 'Nunito', sans-serif; color: #fff; font-weight: bold; font-size: 24px; padding: 8px 32px 0;">
                Contact Information
            </td>
        </tr>
        <tr>
            <td colspan="2" style="font-family: 'Nunito', sans-serif; color: #fff; font-size: 16px; padding: 0 32px;">{{ Address1 }}, {{ Address2 }}</td>
            <td colspan="2" style="font-family: 'Nunito', sans-serif; color: #fff; font-size: 16px; padding: 0 32px;">{{ Name }}</td>
        </tr>
        <tr>
            <td colspan="2" style="font-family: 'Nunito', sans-serif; color: #fff; font-size: 16px; padding: 0 32px;">{{ City }}</td>
            <td colspan="2" style="font-family: 'Nunito', sans-serif; color: #fff; font-size: 16px; padding: 0 32px;">{{ Email }}</td>
        </tr>
        <tr>
            <td colspan="2" style="font-family: 'Nunito', sans-serif; color: #fff; font-size: 16px; padding: 0 32px;">{{ Country }}</td>
            <td colspan="2" style="font-family: 'Nunito', sans-serif; color: #fff; font-size: 16px; padding: 0 32px;">{{ Phone }}</td>
        </tr>
        {% if State and State != '' %}
            <tr>
                <td colspan="4" style="font-family: 'Nunito', sans-serif; color: #fff; font-size: 16px; padding: 0 32px;">{{ State }}</td>
            </tr>
        {% endif %}
        <tr>
            <td colspan="4" style="font-family: 'Nunito', sans-serif; color: #fff; font-size: 16px; padding: 0 32px;">{{ PostCode }}</td>
        </tr>
        </tbody>
    </table>
</div>